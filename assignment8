current_room=0

done=False
print("Hi, You have entered the Forest of Drew University.There are two buildings North and East")
while done==False:
    print()
    command=input("Which way do you want to go?")
    if command.lower()=="north" or command.lower()=="n":
        next_room=room_list[current_room][1]  #This is assigning the next_room to be the room
        if next_room==None:                   #that is in the North position[1]of the list current_room
            print("You can't go that way.")
        else:
            current_room=next_room
            print(room_list[current_room][0])

    elif command.lower()=="east" or command.lower()=="e":
        next_room=room_list[current_room][2]
        if next_room==None:
            print("You can't go that way.")
        else:
            current_room=next_room
            print(room_list[current_room][0])

    elif command.lower()=="south" or command.lower()=="s":
        next_room=room_list[current_room][3]
        if next_room==None:
            print("You can't go that way.")
        else:
            current_room=next_room
            print(room_list[current_room][0])

    elif command.lower()=="west" or command.lower()=="w":
        next_room=room_list[current_room][4]
        if next_room==None:
            print("You can't go that way.")
        else:
            current_room=next_room
            print(room_list[current_room][0])

    else:
        print("The program does not understand") #In case the user imputs something the program does not accept